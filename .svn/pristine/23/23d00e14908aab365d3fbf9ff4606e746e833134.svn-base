import Link from "next/link";
import {useRouter} from "next/router";
import { useEffect, useState } from "react";
const Sidebar = (props) => {
    const [tabClicked, setTabClicked] = useState("overview");
    const router = useRouter();
    useEffect(() => {
        if(router.pathname === "/overview"){
            setTabClicked("overview")
        }
        else if(router.pathname === "/doctordetails"){
            setTabClicked("doctor")
        }
        else if(router.pathname === "/patientdetails"){
            setTabClicked("patient")
        }
        else if(router.pathname === "/ambulance"){
            setTabClicked("ambulance")
        }
        else if(router.pathname === "/warddetails"){
            setTabClicked("ward")
        }
        else if(router.pathname === "/appointment"){
            setTabClicked("appointment")
        }
    },[router.pathname]);
    return(
        <div className="h-[100vh] w-[250px] bg-white items-center block text-black font-semibold text-lg  rounded-r-xl flex-shrink-0">
            <div className="px-5 py-7 font-bold text-3xl flex items-center justify-center">
                MediCare
            </div>
            <div className="flex flex-col px-5">
                <Link href="/overview">
                    <div className={`hover:bg-[#349EFF] hover:text-white ${tabClicked === "overview" ? "bg-[#349EFF] text-white rounded-lg" : "bg-white"} transition-all duration-200 border-b-2 border-t-2 px-5 py-4 hover:rounded-lg cursor-pointer`}>Overview</div>
                </Link>            
                <Link href="/doctordetails">
                    <div className={`hover:bg-[#349EFF] hover:text-white  ${tabClicked === "doctor" ? "bg-[#349EFF] text-white rounded-lg" : "bg-white"} transition-all duration-200 border-b-2 px-5 py-4 hover:rounded-lg cursor-pointer`}>Doctor Details</div>
                </Link>
                <Link href="/patientdetails">
                    <div className={`hover:bg-[#349EFF] hover:text-white  ${tabClicked === "patient" ? "bg-[#349EFF] text-white rounded-lg" : "bg-white"} transition-all duration-200 border-b-2 px-5 py-4 hover:rounded-lg cursor-pointer`}>Patient Details</div>
                </Link>
                <Link href="/appointment">
                    <div className={`hover:bg-[#349EFF] hover:text-white  ${tabClicked === "appointment" ? "bg-[#349EFF] text-white rounded-lg" : "bg-white"} transition-all duration-200 border-b-2 px-5 py-4 hover:rounded-lg cursor-pointer`}>Appointment Details</div>
                </Link>
                <Link href="/ambulance">
                    <div className={`hover:bg-[#349EFF] hover:text-white  ${tabClicked === "ambulance" ? "bg-[#349EFF] text-white rounded-lg" : "bg-white"} transition-all duration-200 border-b-2 px-5 py-4 hover:rounded-lg cursor-pointer`}>Ambulance Details</div>
                </Link>
                <Link href="/warddetails">
                    <div className={`hover:bg-[#349EFF] hover:text-white  ${tabClicked === "ward" ? "bg-[#349EFF] text-white rounded-lg" : "bg-white"} transition-all duration-200 border-b-2 px-5 py-4 hover:rounded-lg cursor-pointer`}>Ward Details</div>
                </Link>
            </div>
        </div>
    );
};
export default Sidebar;